extends base.pug

block content
    img(src= "/" + user.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        if errorMessage
            span=errorMessage
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Userid", type="text", name ="userid", value=user.userid)
        input(placeholder="Email", type="email", name ="email", value=user.email)
        input(placeholder="Username", type="text", name ="username", value=user.username)
        input(placeholder="Location", type="text", name="location", value=user.location)
        input(type = "submit", value="Update")

        if(!loggedIn.socialOnly)
            h1
                a(href="change-password") Change Password
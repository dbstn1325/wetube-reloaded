extends base.pug

block content   
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Upload Video", required, type="text", maxLength=80)
        input(name="description", placeholder="Description", required, type="text", minLength=20)
        input(name="hashtags", placeholder="hashtags", required="true")
        input(type="submit", value="Upload")